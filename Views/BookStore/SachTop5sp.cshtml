@model IEnumerable<BookStore.Models.SACH>

@foreach (var item in Model)
{
    <div class="product-item">
        <div class="product-title">
            <a href="@Url.Action("Details", "BookStore", new { id = item.Masach })">@item.Tensach</a>
            <div class="ratting">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div>
        </div>
        <div class="product-image">
            <a href="product-detail.html">
                <img src="~/img/@item.Anhbia" alt="Product Image">
            </a>
            <div class="product-action">
                <a href="#"><i class="fa fa-cart-plus"></i></a>
                <a href="#"><i class="fa fa-heart"></i></a>
                <a href="#"><i class="fa fa-search"></i></a>
            </div>
        </div>
        <div class="product-price">
            <h3>@String.Format("{0:0,0}", item.Giaban)<span>₫</span></h3>
            <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Mua</a>
        </div>
    </div>
}
