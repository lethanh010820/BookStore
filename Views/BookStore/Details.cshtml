
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="product-detail">
            <div class="col-lg-12">
                <div class="product-detail-top">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="product-slider-single normal-slider">
                                <img src="~/img/@Model.Anhbia" alt="Product Image">
                            </div>

                        </div>
                        <div class="col-md-7">
                            <div class="product-content">
                                <div class="title"><h2>@Model.Tensach</h2></div>
                                <div class="ratting">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="price">
                                    <h4>Price:</h4>
                                    <p>@String.Format("{0:0,0}", Model.Giaban)₫</p>
                                </div>
                                <div class="quantity">
                                    <h4>Số lượng:</h4>
                                    <div class="qty">
                                        <input type="text" value="1">
                                    </div>
                                </div>
                                <div class="p-color">
                                    <h4>Mô tả:</h4>
                                    <div class="btn-group btn-group-sm">
                                        <p>@Model.Mota</p>
                                    </div>
                                </div>
                                <div class="action">
                                    <a class="btn" href="@Url.Action("Themgiohang1","Giohang", new { @iMasach = Model.Masach, @strURL=Request.Url.ToString()})"><i class="fa fa-shopping-bag"></i>Mua ngay</a>

                                    <a class="btn" href="@Url.Action("Themgiohang","Giohang", new { @iMasach = Model.Masach, @strURL=Request.Url.ToString()})"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

               
            <!-- Side Bar End -->
        </div>
</div>
<!-- Product Detail End -->