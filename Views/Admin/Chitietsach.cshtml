
@model BookStore.Models.SACH
@{
    ViewBag.Title = "Chi itiết sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    #MaCD, #MaNXB {
        width: 300px
    }
    label {
        font-weight: bold;
    }
</style>
<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Chi tiết quyển sách</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Tên sách:</label>
                                    @Model.Tensach
                                </div>
                            </div>
                            <div class="col-md-12 pl-1">
                                <div class="form-group">
                                    <label>Mô tả:</label>
                                    @Model.Mota
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Giá bán:</label>
                                    @Model.Giaban
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Ảnh bìa:</label>
                                    <img style="height: 125px;width: 125px;" src="@Url.Content("~/img/"+ Model.Anhbia)" />
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Ngày cập nhật:</label>
                                    @Model.Ngaycapnhat
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Số lượng tồn:</label>
                                    @Model.Soluongton
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Mã Chủ đề:</label>
                                    @Model.CHUDE.TenChuDe
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Mã Nhà xuất bản:</label>
                                    @Model.NHAXUATBAN.TenNXB
                                </div>
                            </div>
                            @Html.ActionLink("Trở về", "Sach")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

