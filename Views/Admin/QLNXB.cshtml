@using PagedList.Mvc;
@model PagedList.IPagedList<BookStore.Models.NHAXUATBAN>
@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Quản lý Nhà xuất bản</h4>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Mã Nhà Xuất Bản</th>
                            <th>Tên Nhà Xuất Bản</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaNXB</td>
                                        <td>@item.TenNXB</td>
                                        <td>@item.Diachi</td>
                                        <td>@item.DienThoai</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="Menutrang">
    @Html.PagedListPager(Model, page => Url.Action("QLNXB", new { page }))
</div>