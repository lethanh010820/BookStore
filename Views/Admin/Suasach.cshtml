@model BookStore.Models.SACH
@{
    ViewBag.Title = "Sửa sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    #MaCD, #MaNXB {
        width: 300px
    }
</style>
<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Sửa sách</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                @Html.ValidationSummary(true)
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <label>Mã sách:</label>
                                        @Model.Masach
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label>Tên sách:</label>
                                        @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Tensach)
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label>Giá bán:</label>
                                        @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Giaban)
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <label>Mô tả:</label>
                                        @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <label>Ảnh:</label>
                                        @Html.EditorFor(model => model.Anhbia, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <label>Ngày cập nhật:</label>
                                        <input class="form-control" type="date" name="Ngaycapnhat">
                                        @Html.ValidationMessageFor(model => model.Ngaycapnhat)
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label>Số lượng tồn:</label>
                                        @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Soluongton)
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label>Mã Chủ đề:</label>
                                        <label class="form-control">@Html.DropDownList("MaCD")</label>
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label>Mã Nhà xuất bản:</label>
                                        <label class="form-control">@Html.DropDownList("MaNXB")</label>

                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <input type="submit" value="Sửa sách" class="btn btn-info btn-fill pull-right" />|
                                        @Html.ActionLink("Trở về", "Sach")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


